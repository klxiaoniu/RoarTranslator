<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/primary_text_default_material_dark" android:gravity="center" android:id="@+id/text_float_title" android:layout_width="0dp" android:layout_height="36dp" android:text="@string/app_name" android:layout_weight="1" android:paddingStart="10dp"/>
        <ImageView android:id="@+id/image_hide" android:layout_width="36dp" android:layout_height="36dp" android:src="@android:drawable/ic_menu_close_clear_cancel"/>
    </LinearLayout>
    <EditText android:gravity="center" android:id="@+id/editText_float" android:layout_width="match_parent" android:layout_height="0dp" android:hint="@string/edit_text_hint" android:ems="10" android:layout_weight="1" android:inputType="textMultiLine"/>
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="42dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
            <Button android:textColor="#ffffffff" android:id="@+id/button_float_paste" android:background="#00000000" android:layout_width="0dp" android:layout_height="42dp" android:text="@android:string/paste" android:layout_weight="1"/>
            <Button android:textColor="#ffffffff" android:id="@+id/button_float_word" android:background="#00000000" android:layout_width="0dp" android:layout_height="42dp" android:text="@string/word" android:layout_weight="1"/>
            <Button android:textColor="#ffffffff" android:id="@+id/button_float_clean" android:background="#00000000" android:layout_width="0dp" android:layout_height="42dp" android:text="@string/clean" android:layout_weight="1"/>
            <Button android:textColor="#ffffffff" android:id="@+id/button_float_roar" android:background="#00000000" android:layout_width="0dp" android:layout_height="42dp" android:text="@string/roar" android:layout_weight="1"/>
            <Button android:textColor="#ffffffff" android:id="@+id/button_float_copy" android:background="#00000000" android:layout_width="0dp" android:layout_height="42dp" android:text="@android:string/copy" android:layout_weight="1"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_resize" android:layout_width="match_parent" android:layout_height="12dp"/>
</LinearLayout>
